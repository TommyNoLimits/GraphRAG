# Production Environment Configuration
# Copy this to .env and update with your production values

# Neo4j Configuration (Production)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_production_password

# PostgreSQL Configuration (Production)
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_HOST=your_production_host
POSTGRES_PORT=5432
POSTGRES_DB=your_production_database
POSTGRES_USER=your_production_user
POSTGRES_PASSWORD=your_production_password

# Migration Configuration
MIGRATION_BATCH_SIZE=100
MIGRATION_TIMEOUT=30000
MIGRATION_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=production.log
